    <ScrollView>
        <StackLayout Padding="22" Spacing="15">
            <materialFrame:MaterialFrame
                CornerRadius="15"
                Elevation="90"
                LightThemeBackgroundColor="#F1F1F1"
                MaterialBlurStyle="ExtraLight">
                <Picker
                    Title="Select country"
                    ItemDisplayBinding="{Binding country}"
                    ItemsSource="{Binding Countries}"
                    SelectedItem="{Binding CountrySelected, Mode=TwoWay}"
                    TextColor="Black"
                    TitleColor="Black"
                    Visual="Material" />
            </materialFrame:MaterialFrame>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <materialFrame:MaterialFrame
                    Grid.Column="0"
                    CornerRadius="15"
                    Elevation="90"
                    LightThemeBackgroundColor="#F1F1F1">
                    <StackLayout>
                        <Label
                            FontSize="17"
                            Text="Cases"
                            TextColor="#000000" />
                        <Label Text="{Binding AllCases.cases, StringFormat='{0:n0}'}" TextColor="#000000" />
                    </StackLayout>
                </materialFrame:MaterialFrame>
                <materialFrame:MaterialFrame
                    Grid.Column="1"
                    CornerRadius="15"
                    Elevation="90"
                    LightThemeBackgroundColor="#F1F1F1">
                    <StackLayout>
                        <Label
                            FontSize="17"
                            Text="Deaths"
                            TextColor="#000000" />
                        <Label Text="{Binding AllCases.deaths, StringFormat='{0:n0}'}" TextColor="#000000" />
                    </StackLayout>
                </materialFrame:MaterialFrame>
                <materialFrame:MaterialFrame
                    Grid.Column="2"
                    CornerRadius="15"
                    Elevation="90"
                    LightThemeBackgroundColor="#F1F1F1">
                    <StackLayout>
                        <Label
                            FontSize="17"
                            Text="Recovered"
                            TextColor="#000000" />
                        <Label Text="{Binding AllCases.recovered, StringFormat='{0:n0}'}" TextColor="#000000" />
                    </StackLayout>
                </materialFrame:MaterialFrame>


